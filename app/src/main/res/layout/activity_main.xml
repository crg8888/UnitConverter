<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/heading"
        android:layout_width="192dp"
        android:layout_height="48dp"
        android:autoText="false"
        android:freezesText="false"
        android:gravity="center_horizontal|center_vertical"
        android:text="UNIT CONVERTER"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/value"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.619" />

    <TextView
        android:id="@+id/answer"
        android:layout_width="223dp"
        android:layout_height="47dp"
        android:layout_marginBottom="160dp"
        android:gravity="center"
        android:text="ANSWER"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/value"
        android:layout_width="245dp"
        android:layout_height="47dp"
        android:layout_marginBottom="84dp"
        android:autoText="false"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:drawableStart="@color/material_on_background_disabled"
        android:drawableLeft="@color/material_on_background_disabled"
        android:drawableTop="@color/material_on_background_disabled"
        android:drawableRight="@color/material_on_background_disabled"
        android:drawablePadding="5sp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:shadowColor="#8A7A7A"
        android:text="ENTER VALUE"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FF0000"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="92dp"
        android:background="#950000"
        android:text="CONVERT"
        app:backgroundTint="#E40000"
        app:backgroundTintMode="src_atop"
        app:layout_constraintBottom_toTopOf="@+id/answer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>